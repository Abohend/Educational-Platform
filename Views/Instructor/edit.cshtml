@model Instructor

@{
	var deps = ViewBag.Departments;
	var courses = ViewBag.Courses;
}
<form asp-action="Edit" method="post">

	<div asp-validation-summary="All" class="text-danger"></div>

	<label class="form-label">Name</label>
	<input asp-for=Name type="text" class="form-control" />

	<label class="form-label">Address</label>
	<input asp-for=Address type="text" class="form-control" />

	<label class="form-label">Salary</label>
	<input asp-for=Salary type="number" class="form-control" />

	<label class="form-label">Image</label>
	<input asp-for=Img type="text" class="form-control" />

	<label class="form-label">Department</label>
	<select asp-for="DepartmentId" class="form-select" asp-items="@deps" onchange="GetRelatedCourses(this.value)">
	</select>
	<span asp-validation-for="DepartmentId" class="text-danger"></span>

	<label class="form-label">Course</label>
	<select asp-for="CourseId" class="form-select" asp-items="@courses">
	</select>
	<span asp-validation-for="CourseId" class="text-danger"></span>

	<br />
	<button type="submit" class="btn btn-primary">Save</button>

</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<Partial name="_GetRelatedCoursesPartial" />
}